.downView{
  width: 100%;
  height: 1250rpx;
  background: #FAE738;
  margin: 0rpx;
  text-align: center;
}
.winNum{
  padding-top: 40rpx;
  display: block;
  font-size: 50rpx;
  color:brown;
  font-weight: 500;
}
/*展示出拳结果*/
.showView{
  display: flex;
  width: 100%;
  margin-top: 30rpx;
  height: 200rpx;
}
.gestruesImgL{
  height: 180rpx;
  width: 180rpx;
  margin-left: 80rpx;
}
.gestruesImgR{
  height: 180rpx;
  width: 180rpx;
  margin-right: 80rpx;
}
.winOrLost{
  color: orangered;
  flex: 1;
  font-size: 60rpx;
  margin-top: 60rpx;
}
